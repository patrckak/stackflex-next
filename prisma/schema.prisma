// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                String   @id @unique
  username          String
  email             String
  verification      String?
  isVerificated     Boolean  @default(false)
  password          String
  LastModify        DateTime @updatedAt
  avatar            String
  cnpj              String?
  enterpriseAccount Boolean  @default(false)
}
