// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           BigInt   @id @unique
  username     String
  email        String
  verification String?
  password     String
  LastModify   DateTime @updatedAt
  avatar       String
  storeOwnerId BigInt
  relation     Store    @relation(fields: [storeOwnerId], references: [storeId])

  @@index([storeOwnerId])
}

model Store {
  storeId    BigInt   @id @unique
  storeName  String
  storeType  String
  LastModify DateTime @updatedAt

  User User[]
}
